# launch thunar
bindsym $mod+t exec thunar

# switch workspace next and previous
bindsym $mod+n workspace next
bindsym $mod+b workspace prev

# lock screen
bindsym $mod+Control+l exec /home/jan/bin/lock.sh

# media control
bindsym $mod+o exec ~/bin/volcontrol.sh up
bindsym $mod+i exec ~/bin/volcontrol.sh down
bindsym $mod+p exec "playerctl play-pause"

# move to scratchpad
bindsym $mod+shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# kill with just mod and q
#bindsym $mod+q exec kill

# vim:ft=i3config
